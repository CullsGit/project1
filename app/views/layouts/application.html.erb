<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat&family=Staatliches&display=swap');
    </style>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="mynav">
      <p><%= link_to 'Home', root_path %></p>
      <% if @current_user.present? %>
        <p><%= link_to 'Create Post', new_post_path %></p>
        <p><%= link_to "Log out of #{ @current_user.name }", login_path, :method => 'delete' %></p>
      <% else %>
        <p><%= link_to 'Sign Up', new_user_path %></p>
        <p><%= link_to 'Login', login_path %></p>

      <% end %>
    </nav>
    <div class="container">


    <%= yield %>
    </div>
  </body>
</html>
